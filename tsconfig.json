{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": false,
    "types": [
      "vite/client",
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@physics/*": ["src/physics/*"],
      "@render/*": ["src/render/*"],
      "@audio/*": ["src/audio/*"],
      "@util/*": ["src/util/*"],
      "@cli/*": ["src/cli/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "vite.config.ts"
  ]
}
